                        android:layout_width="100dp"
                        android:layout_height="125dp"
                        android:src="@drawable/electrical"
                        android:padding="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"/>

