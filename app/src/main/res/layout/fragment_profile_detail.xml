<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="About"/>

    <TextView
        android:id="@+id/detail_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_txt1"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:hint="Discription"/>

    <RelativeLayout
        android:id="@+id/RelLayout"
        android:layout_below="@+id/detail_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border">

        <ProgressBar
            android:id="@+id/ProgressBar1"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminateDrawable="@drawable/progressbarbg"
            android:progress="50"
            />
        <ProgressBar
            android:id="@+id/ProgressBar2"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ProgressBar1"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminateDrawable="@drawable/progressbarbg"
            android:progress="50"
            />
        <ProgressBar
            android:id="@+id/ProgressBar3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ProgressBar2"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminateDrawable="@drawable/progressbarbg"
            android:progress="50" />
        <TextView
            android:id="@+id/detail_text3"
            android:layout_below="@+id/ProgressBar1"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Completed task"/>

        <TextView
            android:id="@+id/detail_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ProgressBar2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/detail_text3"
            android:text="On Time Rate" />

        <TextView
            android:id="@+id/detail_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ProgressBar3"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/detail_text4"
            android:text="Repeated Hire" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/RelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detail_text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Skill"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/detail_text7"
            android:layout_below="@id/detail_text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plumbing"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"/>



    </RelativeLayout>



</RelativeLayout>