<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/sucess_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:gravity="center"
        android:text="Password Updated"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/sucess_message_icon"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        android:src="@drawable/password_updated_icon"/>

    <TextView
        android:id="@+id/sucess_message_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text=" Your Password  Updated Successfully"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/set_new_password_btn"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_confirm_password"
        android:layout_marginTop="50dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Login"/>



</LinearLayout>